<div class="banner">
  <div class="banner-content">
    <h1>Cocktail</h1>
    <h5>Awesome recipes here</h5>
    <p><%= link_to "Create a new cocktail", new_cocktail_path %></p>
  </div>
</div>
<div class="row card-container">
  <%@cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-3">
        <%= link_to cocktail_path(cocktail), class: 'card-link' do %>
          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <% end %>
            <div class="card-words">
              <h3><%= cocktail.name %></h3>
            </div>
          </div>
    </div>
  <% end %>
</div>

