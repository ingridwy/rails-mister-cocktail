<div class="banner">
  <div class="banner-content">
    <h1>Cocktail</h1>
    <h5>Awesome recipes here</h5>
    <p><%= link_to "Create a new cocktail", new_cocktail_path %></p>
  </div>
</div>
<div class="row card-container">
  <%@cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-3">

            <div class="card-words">
              <h3><%= cocktail.name %></h3>
            </div>
          </div>
    </div>
  <% end %>
</div>

